<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp4_odev3.DovizPage"
             Title="Döviz Kuru"
             Background="{DynamicResource ArkaPlanRengi}">

    <VerticalStackLayout Spacing="10" Padding="10">
       
        <Label x:Name="lblDate"
               Text="Döviz Kurları Sayfası"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="#4A148C"
               HorizontalOptions="Center"
               Margin="0,10" />

        <Grid ColumnDefinitions="2*,*,*,*" BackgroundColor="#4A148C" Padding="10">
            <Label Grid.Column="0" Text="İsim" FontAttributes="Bold" TextColor="White"/>
            <Label Grid.Column="1" Text="Alış" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
            <Label Grid.Column="2" Text="Satış" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
            <Label Grid.Column="3" Text="Çapraz" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
        </Grid>

        <ListView x:Name="KurlarList" 
                  HasUnevenRows="True"
                  SeparatorColor="#E1BEE7">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid ColumnDefinitions="2*,*,*,*" Padding="10" BackgroundColor="White">
                            <Label Grid.Column="0" Text="{Binding Isim}" TextColor="#6A1B9A" VerticalOptions="Center" FontSize="12"/>
                            <Label Grid.Column="1" Text="{Binding ForexBuying}" HorizontalTextAlignment="Center" VerticalOptions="Center" FontSize="12"/>
                            <Label Grid.Column="2" Text="{Binding ForexSelling}" HorizontalTextAlignment="Center" VerticalOptions="Center" FontSize="12"/>
                            <Label Grid.Column="3" Text="{Binding CrossRateUSD}" HorizontalTextAlignment="Center" VerticalOptions="Center" FontSize="12"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </VerticalStackLayout>
</ContentPage>